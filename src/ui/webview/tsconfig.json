{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./global.d.ts",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
